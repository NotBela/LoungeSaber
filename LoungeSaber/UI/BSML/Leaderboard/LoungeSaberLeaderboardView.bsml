<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='https://monkeymanboy.github.io/BSML-Docs/BSMLSchema.xsd'>
    <horizontal pref-width="90" pref-height="8" anchor-pos-y="41.5" horizontal-fit="PreferredSize" background="title-gradient" bg-color="#444444" anchor-pos-x="10">
        <text text="Leaderboard" font-size="6" italics="true" all-uppercase="true" align="Midline"/>
    </horizontal>
    <horizontal horizontal-fit='PreferredSize' vertical-fit='PreferredSize' pref-width='100' pref-height='70' pad-left='7' pad-top='1'>
        <vertical horizontal-fit='PreferredSize' vertical-fit='PreferredSize' pref-width='9' pref-height='20'>
            <vertical-icon-segments data='cell-data' select-cell='cell-selected' />
        </vertical>
        <vertical active='~is-loaded' horizontal-fit='PreferredSize' vertical-fit='PreferredSize' pref-width='80' pref-height='70'>
            <custom-list cell-size="5.99" visible-cells="10" show-scrollbar="false" clickable-cells="false" align-to-center="false" id="leaderboard">
                <vertical horizontal-fit="PreferredSize" pref-width="15" anchor-pos-x="-30">
                    <text text="~rankText" align="Left"/>
                </vertical>
                <vertical pref-width="20" anchor-pos-x="-15">
                    <text text="~playerNameText" align="Left" />
                </vertical>
                <vertical pref-width="10" anchor-pos-x="20">
                    <text text="~mmrText" align="Right"/>
                </vertical>
                    
                <vertical pref-width="10" anchor-pos-x="30">
                    <icon-button icon="LoungeSaber.Resources.profile-icon.png" on-click="profileButtonOnClick" pref-width="8" pref-height="8" show-underline="false"/>
                </vertical>
            </custom-list>
        </vertical>
        <vertical active='~is-loading' pref-width='80' pref-height='10'>
            <vertical pref-width='10'>
                <loading-indicator preserve-aspect='true'/>
            </vertical>
        </vertical>
    </horizontal>
    <page-button direction='Up' anchor-pos-x='-37.75' anchor-pos-y='-7' active='~up-enabled' pref-width='5' on-click='up-clicked'/>
    <page-button direction='Down' anchor-pos-x='-37.75' anchor-pos-y='-34' active='~down-enabled' pref-width='5' on-click='down-clicked'/>
    
    <modal clickerino-offerino-closerino="true" size-delta-x="55" size-delta-y="40" move-to-center="false" hide-event="profileModalHide" show-event="profileModalShow" anchor-pos-y="0" anchor-pos-x="5">
        <vertical pref-width="50" pref-height="40">
            <text text="~profileNameText" underlined="true" align="Left" font-size="3.5"/>
            <text text="~profileMmrText" align="Left" font-size="3.5"/>
            <text text="~profileDivisionText" align="Left" font-size="3.5"/>
            <text text="~profileRankText" align="Left" font-size="3.5"/>
            <text text="~profilePlayedMatches" align="Left" font-size="3.5"/>
        </vertical>
    </modal>
</bg>